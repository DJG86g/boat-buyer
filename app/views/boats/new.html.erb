<% require 'carrierwave/orm/activerecord' %>
<h1>New Boat Form</h1>

<% if @boat.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@boat.errors.count, "error") %> prohibited this boat from being saved:</h2>

    <ul>
      <% @boat.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="form">
<%= form_for [@boat] do |f| %>

  <div>
  <%= f.label :brand %><br />
  <%= f.text_field :brand %>
  </div>

  <div>
  <%= f.label :model %><br />
  <%= f.text_field :model %>
  </div>

  <div>
  <%= f.label :year %><br />
  <%= f.text_field :year %>
  </div>

  <div>
  <%= f.label :hours %><br />
  <%= f.text_field :hours %>
  </div>

  <div>
  <%= f.label :engine_size %><br />
  <%= f.text_field :engine_size %>
  </div>

  <div>
  <%= f.label :number_of_engines %><br />
  <%= f.text_field :number_of_engines %>
  </div>

  <div>
  <%= f.label :length_of_boat %><br />
  <%= f.text_field :length_of_boat %>
  </div>

  <div>
  <%= f.label :hull_style %><br />
  <%= f.text_field :hull_style %>
  </div>

  <div>
    <%= f.label :boat_photo %><br>
    <%= f.file_field :boat_photo %>
  </div>

  <%= f.submit "Add My Boat"%>

<% end %>
</div>
